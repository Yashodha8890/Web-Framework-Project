  <!-- Main Content -->
  <main class="flex-grow-1 p-4" role="main" aria-labelledby="activity-tracker-title">
    <h1 id="activity-tracker-title" style="text-align: center;">Activity Tracker</h1>
    <div class="row">
        <div class="col-lg-6">
            <!-- Save Activity Form -->
            <div class="containerSaveActivity">              
                <form class="row g-3" action="/saveActivity" method="post" aria-labelledby="save-activity-heading">
                <h2 id="save-activity-heading" style="text-align: center;">Save Activity</h2>  
                        <div class="col-sm-4">
                            <label for="activityName" class="form-label">Activity Title :</label><br>
                            <label for="activityDescription" class="form-label">Description :</label><br><br>
                            <label for="activityPlannedDate">Date :</label><br>
                            <label for="activityStartTime">Activity Start time :</label>
                            <label for="activityEndTime">Activity End time :</label><br>
                            <label for="activityStatus">Activity Status :</label><br><br>
                            <label for="ActivityCatergory">Activity Category :</label><br>
                            <label for="ActivityType">Activity Type :</label><br>
                            <label for="ActivityPriority">Priority :</label><br>                    
                        </div>
                        <div class="col-sm-8">
                            <input type="text" class="form-control" id="activityName" name="activityName" required aria-required="true">                            
                            <input type="text" class="form-control" id="activityDescription" name="activityDescription" required aria-required="true"><br>
                            <input type="date" id="activityPlannedDate" name="ActivityPlannedDate" required aria-required="true"><br>
                            <input type="time" id="activityStartTime" name="ActivityStartTime" required aria-required="true"><br>
                            <input type="time" id="activityEndTime" name="ActivityEndTime" required aria-required="true"><br>
                            <input class="form-control" type="text" id="activityStatus" value="Pending" aria-label="Activity Status: Pending" name="activityStatus" disabled>                            
                            <select id="ActivityCatergory" name="activityCatergory" required aria-required="true"> 
                                <option value="select">Select</option>
                                <option value="wellness">Wellness</option>
                                <option value="fitness">Fitness</option>
                                <option value="health">Health</option>
                                <option value="work">Work</option>
                                <option value="study">Study</option>
                                <option value="personalDevelopment">Personal Development</option>
                                <option value="household">Household</option>
                                <option value="Leisure">Leisure</option>
                            </select>
                                <br>
                            <select id="ActivityType" name="activityType" required aria-required="true">
                                <option value="select">Select</option>
                                <option value="hourly">Hourly</option>
                                <option value="daily">Daily</option>
                                <option value="weekly">Weekly</option>
                                <option value="monthly">Monthly</option>
                                <option value="yearly">Yearly</option>
                            </select>
                            <br>
                            <select id="ActivityPriority" name="activityPriority" required aria-required="true">
                                <option value="select">Select</option>
                                <option value="high">High</option>
                                <option value="medium">Medium</option>
                                <option value="low">Low</option>
                            </select>
                            <br>
                        </div>   
                        <div class="col-12">
                            <button type="submit" class="btn btn-primary">Save</button>
                            <button type="reset" class="btn btn-primary">Reset</button>
                        </div>
                        </form>
            </div>
        </div>

        <div class="col-lg-6">
            <!-- Save Activity category Form -->
            <form action="/saveCatergory" method="post" aria-labelledby="save-category-title">
                    <div class="containerSaveActivityCategory">
                    <h4 id="save-category-title" class="activity-title">Save Activity Categories</h4>
                    <div class="row">
                        <div class="col-sm-4">
                            <label for="activityCatName" class="form-label">Activity Category Name</label><br>
                            <label for="activityCatDescrption" class="form-label">Activity Description</label>
                        </div>
                        <div class="col-sm-8">
                            <input type="text" class="form-control" id="activityCatName" name="activityCatergoryname" required aria-required="true">                            
                            <input type="text" class="form-control" id="activityCatDescrption" name="activityDescription" required aria-required="true">
                        </div>
                        <div class="col-12">
                            <button type="submit" class="btn btn-primary">Save</button>
                            <button type="reset" class="btn btn-primary">Reset</button>
                        </div>
                    </div>
                    </div>
            </form>
            <br>
            <form action="/saveActivityType" method="post" aria-labelledby="save-type-title">
                <div class="containerSaveActivityCategory">
                    <h4 id="save-type-title" class="activity-title">Save Activity types</h4>
                    <div class="row">
                        <div class="col-sm-4">
                            <label for="ActivityCatergory" class="form-label">Select Activity Category :</label>
                            <label for="ActivityTypeName" class="form-label">Activity Type Name :</label><br>
                            <label for="ActivityDuration" class="form-label">Activity Duration :</label><br>
                        </div>
                        <div class="col-sm-8">
                            <select id="ActivityCatergory" name="activityCatergory" required aria-required="true"> 
                                <option value="select">Select</option>
                                <option value="wellness">Wellness</option>
                                <option value="fitness">Fitness</option>
                                <option value="health">Health</option>
                                <option value="work">Work</option>
                                <option value="study">Study</option>
                                <option value="personalDevelopment">Personal Development</option>
                                <option value="household">Household</option>
                                <option value="Leisure">Leisure</option>
                            </select>
                            <input type="text" class="form-control" id="ActivityTypeName" name="ActivityTypeName" required aria-required="true">    
                            <input type="text" class="form-control" id="ActivityDuration" name="ActivityDuration" required aria-required="true">                        
                        </div>
                        <div class="col-12">
                            <button type="submit" class="btn btn-primary">Save</button>
                            <button type="reset" class="btn btn-primary">Reset</button>
                        </div>
                    </div>
                </div>
            </form>
        </div>        
    </div>    
  </main>
</div>

<div class="container-viewActivity">
  <h1 id="activity-table-title" style="text-align: center;">{{title}}</h1>
  <div class="table-container">
    <table class="activity-table" border="1" cellpadding="10" aria-labelledby="activity-table-title">
      <thead>
        <tr>
          <th scope="col">Activity Name</th>
          <th scope="col">Description</th>
          <th scope="col">Planned Date</th>
          <th scope="col">Start Time</th>
          <th scope="col">End Time</th>
          <th scope="col">Status</th>
          <th scope="col">Category</th>
          <th scope="col">Type</th>
          <th scope="col">Priority</th>
          <th scope="col">Actions</th>
        </tr>
      </thead>
      <tbody>
        {{#each activities}}
        <tr>
          <td>{{this.activityName}}</td>
          <td>{{this.activityDescription}}</td>
          <td>{{this.ActivityPlannedDateFormatted}}</td>
          <td>{{this.ActivityStartTime}}</td>
          <td>{{this.ActivityEndTime}}</td>
          <td>{{this.activityStatus}}</td>
          <td>{{this.activityCatergory}}</td>
          <td>{{this.activityType}}</td>
          <td>{{this.activityPriority}}</td>
          <td>
            <div class="action-buttons">
              <form action="/deleteActivity/{{this._id}}" method="post">
                <button type="submit" class="delete" onclick="return confirm('Are you sure?')" aria-label="Delete activity {{this.activityName}}">Delete</button>
              </form>
              <form action="/updateActivity/{{this._id}}" method="get">
                <button type="submit" class="update" aria-label="Update activity {{this.activityName}}">Update</button>
              </form>
            </div>
          </td>
        </tr>
        {{/each}}
      </tbody>
    </table>  
  </div>
</div>