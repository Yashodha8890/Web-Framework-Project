
<div class="container-activityNew">
  <!-- Sidebar -->
  <nav id="sidebar" class="">
    <div class="sidebar-header p-3">
      <img src="/images/Logo DRT.jpg" alt="Logo" class="logo-img mb-2">
      <h4>Daily Routing Tracker</h4>
    </div>
    <ul class="nav flex-column">

      <li class="nav-item">
        <a class="nav-link" href="http://localhost:3000/home">Home</a>
      </li>

      <li class="nav-item">
        <a class="nav-link" data-bs-toggle="collapse" href="#activityMenu" role="button">
          Activity Tracker
        </a>
        <ul class="collapse list-unstyled ps-3" id="activityMenu">
          <li><a class="nav-link" href="http://localhost:3000/activity">Activity Log</a></li>
          <li><a class="nav-link" href="http://localhost:3000/updateActivity">Activity Update</a></li>
        </ul>
      </li>

      <li class="nav-item">
        <a class="nav-link" data-bs-toggle="collapse" href="#expenseMenu" role="button">
          Expense Tracker
        </a>
        <ul class="collapse list-unstyled ps-3" id="expenseMenu">
          <li><a class="nav-link" href="http://localhost:3000/addExpense">Expense Log</a></li>
          <li><a class="nav-link" href="http://localhost:3000/viewExpense">Expense Update</a></li>
          
        </ul>
      </li>

      <li class="nav-item">
        <a class="nav-link" data-bs-toggle="collapse" href="#dashboardMenu" role="button">
          Dashboard
        </a>
        <ul class="collapse list-unstyled ps-3" id="dashboardMenu">
          <li><a class="nav-link" href="http://localhost:3000/activityDashboard">Activity Dashboard</a></li>
          <li><a class="nav-link" href="http://localhost:3000/expenseDashboard">Expense Dashboard</a></li>
        </ul>
      </li>

      <li class="nav-item mt-3">
        <span class="nav-link">Hello!! {{user.userName}}</span>
        <a href="/logout" class="btn btn-sm btn-outline-light mt-2">Logout</a>
      </li>

    </ul>
  </nav>
  

  <!-- Main Content -->
  <main class="flex-grow-1 pt-8 pr-8 pb-8 pl-16">
  <div class="bg-white rounded-2xl shadow-xl p-6 max-w-2xl w-full">
    <h1 class="text-2xl font-bold mb-4 text-center">Update Expense</h1>
    
    <form action="/updateExpense/{{expense._id}}" method="POST" class="space-y-4">
      <div>
        <label class="block mb-1 font-semibold">Amount</label>
        
        <input type="number" name="amount" value="{{expense.amount}}" required class="w-full border border-gray-300 p-2 rounded" />
      </div>

      <div>
        <label class="block mb-1 font-semibold">Category</label>
        <input type="text" name="category" value="{{expense.category}}" required class="w-full border border-gray-300 p-2 rounded" />
      </div>

      <div class="mb-4">
        <label class="font-medium">Due Date</label>
        <input type="date" id="dueDate" class="border mt-2 w-full p-2 rounded" value="{{expense.dueDate}}" name="dueDate" required><br>
      </div>

      <div class="mb-4">
        <label class="font-medium">Paid date</label>
        <input type="date" id="paidDate" class="border mt-2 w-full p-2 rounded" value="{{expense.paidDate}}"name="paidDate" ><br>
      </div>

      <div class="mb-4">
        <label class="font-medium">Payment status</label>
        <select name="status" class="border w-full p-2 mt-2 rounded">
          <option>Planned</option>
          <option>Due</option>
          <option>Paid</option>
          <option>Partialy paid</option>
          <option>Overdue</option>
          <option>Cancelled</option>
        </select>
      </div>

      <div class="mb-4">
        <label class="font-medium">Paid With</label>
        <select name="paymentMethod" class="border w-full p-2 mt-2 rounded">
          <option>Cash</option>
          <option>Credit Card</option>
          <option>Debit Card</option>
          <option>Bank Transfer</option>
          <option>Digital Wallet</option>
        </select>
      </div>

      <div>
        <label class="block mb-1 font-semibold">Notes</label>
        <textarea name="notes" class="w-full border border-gray-300 p-2 rounded">{{expense.notes}}</textarea>
      </div>   

      <div class="text-center">
        <button type="submit" class="bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-500">Update Expense</button>
      </div>
    </form>
   
  </div>
</body>
</html>
