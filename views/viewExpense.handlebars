<div class="container-fluid min-h-screen bg-gray-50 p-4">
  <div class="row">
    <!-- Sidebar -->
    <div class="col-sm-3">
      <nav class="nav flex-column bg-green-600 text-white rounded-lg p-3 h-full">
        <div class="mb-4">
          <a href="#"><img src="/images/Logo DRT.jpg" alt="Logo" class="w-full mb-3"></a>
        </div>
        <a class="py-2 text-center text-xl hover:bg-green-500 rounded" href="/home">Home</a>
        <a class="py-2 text-center text-xl hover:bg-green-500 rounded" href="/activityTracker">Activity Tracker</a>
        <a class="py-2 text-center text-xl hover:bg-green-500 rounded" href="/addExpense">Money Tracker</a>
        <a class="py-2 text-center text-xl hover:bg-green-500 rounded" href="#">Dashboard</a>
        <a class="py-2 text-center text-xl hover:bg-green-500 rounded" href="#">Profile</a>
      </nav>
    </div>

    <!-- Main Content -->
    <div class="col-sm-9">
      <div class="bg-white rounded-2xl shadow-xl p-6">
        <h1 class="text-3xl font-bold mb-6 text-gray-800">All Expenses</h1>

        <div class="overflow-x-auto">
          <table class="min-w-full bg-white border border-gray-300 text-center">
            <thead>
              <tr class="bg-gray-200">
                <th class="border px-4 py-2">Amount</th>
                <th class="border px-4 py-2">Category</th>
                <th class="border px-4 py-2">Payment Method</th>
                <th class="border px-4 py-2">Due Date</th>
                <th class="border px-4 py-2">Paid Date</th>
                <th class="border px-4 py-2">Status</th>
                <th class="border px-4 py-2">Notes</th>
                <th class="border px-4 py-2">Actions</th>
              </tr>
            </thead>
            <tbody>
              {{#each expenses}}
              <tr class="hover:bg-gray-100">
                <td class="border px-4 py-2">${{this.amount}}</td>
                <td class="border px-4 py-2">{{this.category}}</td>
                <td class="border px-4 py-2">{{this.paymentMethod}}</td>
                <td class="border px-4 py-2">{{this.dueDate}}</td>
                <td class="border px-4 py-2">{{this.paidDate}}</td>
                <td class="border px-4 py-2">{{this.status}}</td>
                <td class="border px-4 py-2">{{this.notes}}</td>
                <td class="border px-4 py-2 space-x-2">
                  <a href="/updateExpense/{{this._id}}" class="bg-blue-500 text-white py-1 px-3 rounded hover:bg-blue-600">Edit</a>
                  <form action="/deleteExpense/{{this._id}}" method="POST" class="inline-block">
                    <button type="submit" class="bg-red-500 text-white py-1 px-3 rounded hover:bg-red-600">x</button>
                  </form>
                </td>
              </tr>
              {{/each}}
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
