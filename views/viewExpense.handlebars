<div class="container-activityNew">
  <!-- Sidebar -->
  <nav id="sidebar" class="">
    <div class="sidebar-header p-3">
      <img src="/images/Logo DRT.jpg" alt="Logo" class="logo-img mb-2">
      <h4>Daily Routing Tracker</h4>
    </div>
    <ul class="nav flex-column">

      <li class="nav-item">
        <a class="nav-link" href="/home">Home</a>
      </li>

      <li class="nav-item">
        <a class="nav-link" data-bs-toggle="collapse" href="#activityMenu" role="button">
          Activity Tracker
        </a>
        <ul class="collapse list-unstyled ps-3" id="activityMenu">
          <li><a class="nav-link" href="/activity">Activity Log</a></li>
          <li><a class="nav-link" href="/updateActivity">Activity Update</a></li>
        </ul>
      </li>

      <li class="nav-item">
        <a class="nav-link" data-bs-toggle="collapse" href="#expenseMenu" role="button">
          Expense Tracker
        </a>
        <ul class="collapse list-unstyled ps-3" id="expenseMenu">
          <li><a class="nav-link" href="/addExpense">Expense Log</a></li>
          <li><a class="nav-link" href="/viewExpense">Expense Update</a></li>
          
        </ul>
      </li>

      <li class="nav-item">
        <a class="nav-link" data-bs-toggle="collapse" href="#dashboardMenu" role="button">
          Dashboard
        </a>
        <ul class="collapse list-unstyled ps-3" id="dashboardMenu">
          <li><a class="nav-link" href="/activityDashboard">Activity Dashboard</a></li>
          <li><a class="nav-link" href="/expenseDashboard">Expense Dashboard</a></li>
        </ul>
      </li>

      <li class="nav-item mt-3">
        <span class="nav-link">Hello!! {{user.userName}}</span>
        <a href="/logout" class="btn btn-sm btn-outline-light mt-2">Logout</a>
      </li>

    </ul>
  </nav>
  

  <!-- Main Content -->
  <main class="flex-grow-1 p-8">
    <div class="">
      <div class="bg-white rounded-2xl shadow-xl p-6">
        <h1 class="text-3xl font-bold mb-6 text-gray-800">All Expenses</h1>

        <div class="overflow-x-auto">
          <table class="min-w-full bg-white border border-gray-300 text-center">
            <thead>
              <tr class="bg-gray-200">
                <th class="border px-4 py-2">Amount</th>
                <th class="border px-4 py-2">Category</th>
                <th class="border px-4 py-2">Payment Method</th>
                <th class="border px-4 py-2">Due Date</th>
                <th class="border px-4 py-2">Paid Date</th>
                <th class="border px-4 py-2">Status</th>
                <th class="border px-4 py-2">Notes</th>
                <th class="border px-4 py-2">Actions</th>
              </tr>
            </thead>
            <tbody>
              {{#each expenses}}
              <tr class="hover:bg-gray-100">
                <td class="border px-4 py-2">${{this.amount}}</td>
                <td class="border px-4 py-2">{{this.category}}</td>
                <td class="border px-4 py-2">{{this.paymentMethod}}</td>
                <td class="border px-4 py-2">{{this.dueDate}}</td>
                <td class="border px-4 py-2">{{this.paidDate}}</td>
                <td class="border px-4 py-2">{{this.status}}</td>
                <td class="border px-4 py-2">{{this.notes}}</td>
                <td class="border px-4 py-2 space-x-2">
                  <a href="/updateExpense/{{this._id}}" class="bg-blue-500 text-white  px-3  rounded hover:bg-blue-600">Edit</a>
                  <form action="/deleteExpense/{{this._id}}" method="POST" class="inline-block">
                    <button type="submit" class="bg-red-500 text-white  px-3 rounded hover:bg-red-600">Delete</button>
                  </form>
                </td>
              </tr>
              {{/each}}
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
