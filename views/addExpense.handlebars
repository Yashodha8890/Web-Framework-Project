      <form action="/addExpense" method="POST" aria-labelledby="pageTitle">
        <div class="mb-4">
          <label for="amount" class="font-medium">Amount Spent</label>
          <input type="number" id="amount" name="amount" class="border mt-2 w-full p-2 rounded" placeholder="$" required>
