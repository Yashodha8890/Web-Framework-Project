          <input type="date" id="dueDate" name="dueDate" class="border mt-2 w-full p-2 rounded" required>
        </div>

        <div class="mb-4">
          <label for="paidDate" class="font-medium">Paid Date</label>
          <input type="date" id="paidDate" name="paidDate" class="border mt-2 w-full p-2 rounded" aria-describedby="paidDateDesc">
          <span id="paidDateDesc" class="sr-only">Leave empty if not yet paid</span>
        </div>

        <div class="mb-4">
          <label for="status" class="font-medium">Payment Status</label>
          <select id="status" name="status" class="border w-full p-2 mt-2 rounded" required>
            <option>Planned</option>
            <option>Due</option>
            <option>Paid</option>
            <option>Partialy paid</option>
            <option>Overdue</option>
            <option>Cancelled</option>
          </select>
        </div>

        <div class="mb-4">
          <label for="paymentMethod" class="font-medium">Paid With</label>
          <select id="paymentMethod" name="paymentMethod" class="border w-full p-2 mt-2 rounded" required>
            <option>Cash</option>
            <option>Credit Card</option>
            <option>Debit Card</option>
            <option>Bank Transfer</option>
            <option>Digital Wallet</option>
          </select>
        </div>

        <div class="mb-4">
          <label for="notes" class="font-medium">Notes <span class="sr-only">(Optional)</span></label>
          <textarea id="notes" name="notes" class="border w-full p-2 mt-2 rounded" placeholder="E.g. Lunch at Joe’s Diner" aria-describedby="notesHint"></textarea>
