          <input type="file" id="receipt" name="receipt" class="block mt-2" aria-describedby="receiptHint">
          <div id="receiptHint" class="sr-only">Optional file upload for this expense</div>
        </div>

        <button type="submit" class="bg-green-600 text-white w-full py-2 rounded-lg hover:bg-green-700">Save Expense</button>
      </form>
